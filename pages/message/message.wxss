.add-icon {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  border-radius: 50%;
  background: #efbd56;
  height: 70rpx;
  width: 70rpx;
  padding: 10rpx;
}
.message-date {
  text-align: center;
  margin: 10rpx 0 40rpx 0;
}
.date-text {
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  background: #cecece;
  color: #fff;
  font-weight: 500;
  font-size: 10pt;
}
.message-card {
  margin: 0 0 30rpx;
  font-size: 11pt;
  background: #fff;
  box-shadow: 0rpx 2rpx 2rpx #c6c6c6;
}
.message-header {
  border-radius: 10px 10px 0 0;
  display: flex;
  align-items: center;
  font-size: 14pt;
  font-weight: 300;
  padding: 20rpx 30rpx 0;
}
.message-author {
  flex: 2;
}
.message-body {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background: #fafafa;
}
.message-title {
  font-weight: 500;
  padding-bottom: 14rpx;
  color: #efbd57;
}
.message-footer {
  padding: 20rpx 30rpx 40rpx;
  display: flex;
}
.message-time {
  flex: 1;
  font-size: 10pt;
  color: #999;
  padding-right: 0rpx;
}
.message-share {
  position: relative;
  top: -0.35em;
  flex-basis: 1em;
  text-align: right;
  letter-spacing: 4rpx;
}
.vote-card {
  background: #fff;
  padding: 20rpx;
}
.vote-icon {
  height: 50rpx;
  width: 50rpx;
}

.fixed-bottom {
  background: white;
  position: fixed;
  align-items: center;
  bottom: 0;
  width: 100%;
  display: flex;
  border-top: 1px solid #e0e0e0;
}
.comment-input {
  display: block;
  background: #e7e7e7;
  padding: 10rpx;
  margin: 16rpx;
  margin-right: 0;
  border-radius: 6px;
  flex: 1;
}
.comment-submit {
  color: #edb000;
  text-align: center;
  flex-basis: 3.5em;
  font-weight: 500;
}