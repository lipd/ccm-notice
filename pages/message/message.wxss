.add-icon {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  border-radius: 50%;
  background: #efbd56;
  height: 70rpx;
  width: 70rpx;
  padding: 10rpx;
}
.message-date {
  text-align: center;
  margin: 10rpx 0 40rpx 0;
}
.date-text {
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  background: #cecece;
  color: #fff;
  font-weight: 500;
  font-size: 10pt;
}
.message-card {
  font-size: 11pt;
  background: #fff;
}
.message-header {
  border-radius: 10px 10px 0 0;
  display: flex;
  align-items: center;
  font-size: 14pt;
  font-weight: 300;
  padding: 20rpx 30rpx 0;
}
.message-author {
  flex: 2;
}
.message-body {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background: #fafafa;
}
.message-title {
  font-weight: 500;
  padding-bottom: 14rpx;
  color: #efbd57;
}
.message-footer {
  padding: 20rpx 30rpx 40rpx;
  display: flex;
}
.message-time {
  flex: 1;
  font-size: 10pt;
  color: #999;
  padding-right: 0rpx;
}
.message-share {
  position: relative;
  top: -0.35em;
  flex-basis: 1em;
  text-align: right;
  letter-spacing: 4rpx;
}
.vote-message {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-top: 3rpx solid #f6f6f6;
  margin-bottom: 30rpx;
  font-weight: 500;
  font-size: 10pt;
}
.vote-message image {
  margin-right: 36rpx;
}
.vote-icon {
  height: 50rpx;
  width: 50rpx;
}
.reply-list-card {
  background: #fff;
  padding-top: 15rpx;
}
.top-first {
  background: #fafafa;
  text-align: center;
  font-size: 12pt;
  padding: 15rpx 20rpx;
  margin: 0 24rpx 15rpx;
  border-radius: 12rpx;
}
.pencil {
  margin-right: 0.8em
}
.top-second {
  border-top: solid 3rpx #f8f8f8;
  padding: 20rpx 30rpx;
  font-size: 12pt;
}
.reply-card {
  border-top: solid 3rpx #f8f8f8;
  padding: 24rpx 20rpx;
}
.reply-header {
  display: flex;
  align-items: center;
}
.avatar {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.header-message {
  flex: 1;
}
.author-name {
  font-size: 12pt;
}
.reply-time {
  color: #999;
  font-size: 10pt;
  margin-top: 10rpx;
}
.reply-at {
  font-size: 12pt;
  font-weight: 300;
  color: #999;
  flex-basis: 1em;
}
.reply-vote {
  text-align: right;
  flex-basis: 3.5em;
  font-size: 12pt;
}
.reply-vote image {
  display: inline-block;
  height: 1em;
  width: 1em;
}
.vote-count {
  position: relative;
  top: -4rpx;
  font-size: 11pt;
  padding-left: 0.4em;
  color: #999;
}
.reply-body {
  margin-left: 70rpx;
  padding: 20rpx 0 0 10rpx;
  font-size: 12pt;
}
.reply-footer {
  margin-left: 70rpx;
  margin-top: 20rpx;
}
.comment-card {
  margin-left: 10rpx;
  background: #fafafa;
  padding: 14rpx;
  font-size: 11pt;
}
.comment-author {
  color: #efbd57;
}

.fixed-bottom {
  background: white;
  position: fixed;
  align-items: center;
  bottom: 0;
  width: 100%;
  display: flex;
  border-top: 3rpx solid #e0e0e0;
}
.comment-input {
  display: block;
  background: #e7e7e7;
  padding: 10rpx;
  margin: 16rpx;
  margin-right: 0;
  border-radius: 6px;
  flex: 1;
}
.comment-submit {
  color: #edb000;
  text-align: center;
  flex-basis: 3.5em;
  font-weight: 500;
}

.bottom {
  padding: 2em;
}